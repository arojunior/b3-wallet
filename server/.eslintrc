{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "prettier"
  ],
  "rules": {
    "no-use-before-define": 0,
    "class-methods-use-this": 0,
    "arrow-body-style": 0,
    "dot-notation": 0,
    "no-console": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100
      }
    ],    
    "quotes": [
      "error",
      "backtick"
    ]    
  },
  "globals": {
    "document": true
  }
}